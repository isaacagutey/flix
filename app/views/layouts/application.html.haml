!!! 5
%html(lang="en-US")
  %head
    %title FLiX - a video on demand service
    %meta(charset="UTF-8")
    %meta(name="viewport" content="width=device-width, initial-scale=1.0")
    = csrf_meta_tag
    = stylesheet_link_tag "application"
    = stylesheet_link_tag "//cdnjs.cloudflare.com/ajax/libs/font-awesome/4.4.0/css/font-awesome.min.css", media: 'all'
    = javascript_include_tag "application"
  - if logged_in?
    %body
      %header
        = render 'shared/header'
      %section.content.clearfix
        = render 'shared/messages'
        %main.cd-main-content
          %nav.cd-side-nav
            %ul
              %li.cd-label Main
              %li.has-children.overview
                %a{:href => "#0"} Overview
                %ul
                  %li
                    %a{:href => "#0"} All Data
                  %li
                    %a{:href => "#0"} Category 1
                  %li
                    %a{:href => "#0"} Category 2
              %li.has-children.notifications.active
                %a{:href => "#0"}
                  Notifications
                  %span.count 3
                %ul
                  %li
                    %a{:href => "#0"} All Notifications
                  %li
                    %a{:href => "#0"} Friends
                  %li
                    %a{:href => "#0"} Other
              %li.has-children.comments
                %a{:href => "#0"} Comments
                %ul
                  %li
                    %a{:href => "#0"} All Comments
                  %li
                    %a{:href => "#0"} Edit Comment
                  %li
                    %a{:href => "#0"} Delete Comment
            %ul
              %li.cd-label Secondary
              %li.has-children.bookmarks
                %a{:href => "#0"} Bookmarks
                %ul
                  %li
                    %a{:href => "#0"} All Bookmarks
                  %li
                    %a{:href => "#0"} Edit Bookmark
                  %li
                    %a{:href => "#0"} Import Bookmark
              %li.has-children.images
                %a{:href => "#0"} Images
                %ul
                  %li
                    %a{:href => "#0"} All Images
                  %li
                    %a{:href => "#0"} Edit Image
              %li.has-children.users
                %a{:href => "#0"} Users
                %ul
                  %li
                    %a{:href => "#0"} All Users
                  %li
                    %a{:href => "#0"} Edit User
                  %li
                    %a{:href => "#0"} Add User
            %ul
              %li.cd-label Action
              %li.action-btn
                %a{:href => "#0"} + Button
          .content-wrapper
            = yield
          / .content-wrapper
        / .cd-main-content
        %footer
          &copy 2016 Flix
  - else
    %body.front_page
      %section.content.clearfix
        = render 'shared/messages'
        = yield
      %hr
      %h3.footer_text &copy 2016 plsma
  :javascript
    $('div.alert.alert-danger.fade.in, ul.alert.alert-danger, div.alert.alert-info.fade.in').delay(5000).fadeOut(300);