.cd-timeline-block
  .cd-timeline-img.cd-picture
    %img{:alt => "Picture", :src => "http://www.gravatar.com/avatar/#{Digest::MD5.hexdigest(review.user.email.downcase)}?s=40"}
  / cd-timeline-img
  .cd-timeline-content
    %h2= link_to review.user.full_name, review.user
    %p= review.review
    %a.cd-read-more{:href => "#0"} Read more
    %span.cd-date= format_date(review.created_at)
    / cd-timeline-content
/ cd-timeline-block